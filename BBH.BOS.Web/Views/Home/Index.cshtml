
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="" style="padding-top: 5.5rem; margin-left: 5%;margin-right: 5%;">

    <div class="container-fluid">

        <!-- First row -->
        <div class="row mb-r">
            <!-- First column -->
            <div class="col-md-3 mb-1">
                <!--Card-->
                <div class="card card-cascade cascading-admin-card">

                    <!--Card Data-->
                    <div class="admin-up">
                        <i class="fa fa-money  blue darken-3"></i>
                        <div class="data">
                            <p>SALES</p>
                            <h3>2000$</h3>
                        </div>
                    </div>
                    <!--/.Card Data-->
                    <!--Card content-->
                    <div class="card-block">
                        <div class="progress">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <!--Text-->
                        <p class="card-text">Better than last week (25%)</p>
                    </div>
                    <!--/.Card content-->

                </div>
                <!--/.Card-->
            </div>

            <!-- Second column -->
            <div class="col-md-3 mb-1">
                <!--Card-->
                <div class="card card-cascade cascading-admin-card">

                    <!--Card Data-->
                    <div class="admin-up">
                        <i class="fa fa-line-chart deep-purple darken-4"></i>
                        <div class="data">
                            <p>SUBSCRIPTIONS</p>
                            <h3>200</h3>
                        </div>
                    </div>
                    <!--/.Card Data-->
                    <!--Card content-->
                    <div class="card-block">
                        <div class="progress">
                            <div class="progress-bar bg-danger" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <!--Text-->
                        <p class="card-text">Worse than last week (25%)</p>
                    </div>
                    <!--/.Card content-->

                </div>
                <!--/.Card-->
            </div>

            <!-- Third column -->
            <div class="col-md-3 mb-1">
                <!--Card-->
                <div class="card card-cascade cascading-admin-card">

                    <!--Card Data-->
                    <div class="admin-up">
                        <i class="fa fa-pie-chart indigo"></i>
                        <div class="data">
                            <p>TRAFFIC</p>
                            <h3>20000</h3>
                        </div>
                    </div>
                    <!--/.Card Data-->
                    <!--Card content-->
                    <div class="card-block">
                        <div class="progress">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <!--Text-->
                        <p class="card-text">Better than last week (75%)</p>
                    </div>
                    <!--/.Card content-->

                </div>
                <!--/.Card-->
            </div>

            <!-- Fourth column -->
            <div class="col-md-3 mb-1">
                <!--Card-->
                <div class="card card-cascade cascading-admin-card">

                    <!--Card Data-->
                    <div class="admin-up">
                        <i class="fa fa-bar-chart purple"></i>
                        <div class="data">
                            <p>ORGANIC TRAFFIC</p>
                            <h3>2000</h3>
                        </div>
                    </div>
                    <!--/.Card Data-->
                    <!--Card content-->
                    <div class="card-block">
                        <div class="progress">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <!--Text-->
                        <p class="card-text">Better than last week (25%)</p>
                    </div>
                    <!--/.Card content-->

                </div>
                <!--/.Card-->
            </div>
        </div>
        <!-- /.First row -->
        <!-- Second row -->

        <div class="row mb-0">
            <!--First column-->
            <div class="col-md-12">

                <!--Panel content-->
                <div class="card-block pt-0" style="    background-color: #fff;">

                    <div class="table-responsive">

                        <!--Table-->
                        <table class="table table-hover">
                            <!--Table head-->
                            <thead>
                                <tr class="primary-color">
                                    <th>Campaign name</th>
                                    <th>Source</th>
                                    <th>Conversion rate</th>
                                    <th>Invested</th>
                                </tr>
                            </thead>
                            <!--/Table head-->
                            <!--Table body-->
