@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Material Design Bootstrap</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">
    <!-- Bootstrap core CSS -->
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Material Design Bootstrap -->
    <link href="/Content/css/mdb.css" rel="stylesheet" />
    <!-- Your custom styles (optional) -->
    <link href="/Content/css/style.css" rel="stylesheet" />
    <link href="/Content/alertify.css" rel="stylesheet" />
    <style type="text/css">
        input:invalid {
            border-bottom: 1px solid red;
        }
    </style>
</head>
<body class="fixed-sn white-skin">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-5 login-form mx-auto float-none">
                <!--Form with header-->
                <div class="card">
@using (Html.BeginForm("LoginMember", "Login", FormMethod.Post))
{
                    @*<form action="/Login/LoginMember" method="post" id="myForm">*@
                        <div class="card-block">
                            <!--Header-->
                            <div class="form-header">
                                <h3><i class="fa fa-lock"></i> Login:</h3>
                            </div>
                            <!--Body-->
                            <div class="md-form">
                                <i class="fa fa-envelope prefix"></i>
                                <input type="text" id="txtEmail" name="txtEmail" onfocus="ResetForm(1)" class="form-control" required>
                                <label id="lbEmail" for="form2">Email</label>
                            </div>
                            <div class="md-form">
                                <i class="fa fa-lock prefix"></i>
                                <input type="password" id="txtPassword" name="txtPassword" onfocus="ResetForm(3)" class="form-control" required>
                                <label id="lbPass" for="form4">Password</label>
                            </div>
                            <div class="g-recaptcha" id="captcha" data-sitekey="6LfhJyUUAAAAANmMFHQ7ARUoDEwgs3Zy-W6bwCo1" style="margin-left: 49px;"></div><br />
                            <div class="text-center">
                                <button type="submit" onclick="return LoginMember()" class="btn btn-primary">Login</button>
                            </div>
                        </div>
                    @*</form>*@
}

                    <div class="">
                        <div class="modal-footer text-center">
                            <a href="/getpassword" style="float:left" data-toggle="modal" data-target="#standardModal1">Forgot password</a> 
                            <a href="/registermember">Sign up</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    @*======================================ResetPassword===================================*@
    <div class="modal fade" id="standardModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <!--Content-->

            <div class="modal-content">
                <!--Header-->
                <div class="modal-header white-text" style="background-color: #154771">
                    <p class="heading" contenteditable="true">Forgot Password</p>
                </div>
                <!--Body-->
                <div class="modal-body">
                    <form>
                        <!--First row-->
                        <div class="row" style="padding:0px; margin:0px">

                            <div class="col-md-12">
                                <label id="lbEwallet">Email Address:</label>
                                <div class="md-form" style="padding:0px; margin:0px">
                                    <input type="text" style="padding:0px; margin:0px" onfocus="ResetForm('lbreEmail', this.value)" id="txtReEmail" name="txtReEmail" class="form-control validate">
                                    <label id="lbreEmail" style="color:red; display:none" class=""></label>

                                </div>
                                <label style="color:red" id="lbPassword"></label>
                            </div>

                        </div>



                        <div class="row">
                            <img src="/Images/loading.gif" id="imgLoading" style="position: absolute; display:none">
                            <div class="col-md-12 text-center">
                                <input type="button" style="padding:5px 30px; cursor:pointer; height:35px" onclick="ForgotPassword()" value="Sent" class="btn-primary">
                            </div>
                        </div>

                    </form>

                    <br>

                </div>
                <!--Footer-->
                <div class="modal-footer">
                    <img id="imgLoadingBooking" src="/Images/loading.gif" style="display:none">
                    <a id="2lvlModal-cancel" class="btn btn-default waves-effect waves-light" onclick="CloseModal()" data-dismiss="modal" contenteditable="true">Close</a>

                </div>
            </div>

            <!--/.Content-->
        </div>


    </div>

    @*======================================ResetPassword===================================*@




    <input type="hidden" id="hdResult" value="@ViewBag.Result" />
    <input type="hidden" id="hdUsername" value="@ViewBag.Username" />
    <input type="hidden" id="hdPassword" value="@ViewBag.Password" />
    <script src='https://www.google.com/recaptcha/api.js' type="text/javascript"></script>

    <!-- SCRIPTS -->
    <!-- JQuery -->
    <script src="/Content/js/jquery-3.1.1.min.js"></script>
    <script src="/Scripts/login/login.js"></script>
    <!-- Bootstrap tooltips -->
    <script src="/Content/js/tether.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script src="/Content/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script src="/Content/js/mdb.min.js"></script>
    <script src="/Scripts/alertify.js"></script>
    <script src="/Scripts/member/member.js"></script>
</body>


</html>
